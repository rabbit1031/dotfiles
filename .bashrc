# prompt
PS1='\[\e[0;32m\]\u@\h \[\e[0;37m\][\t]: \[\e[0;36m\]\w\n\[\e[0;37m\]\$\[\e[00m\] '

# bash_history
export HISTCONTROL=ignoredups
export HISTTIMEFORMAT='%F %T '

# aliases
alias mv='mv -iv'
alias cp='cp -iv'
alias rm='rm -iv'
alias mkdir='mkdir -pv'

alias ls='ls -AhFG'
alias less='less -M'
alias grep='grep --color'
